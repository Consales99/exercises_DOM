<!DOCTYPE html>
<html lang="it">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navigare nel DOM</title>
</head>

<body>
  <ul>
    <li>1</li>
    <li>2</li>
    <li>3</li>
  </ul>

  <script>
    const ul = document.querySelector('ul');

    // 1) l'elemento padre di ul
    console.log(ul.parentElement);

    // 2) il secondo elemento figlio di ul
    const secondLi = ul.children[1];
    console.log(secondLi);

    // 3) l'elemento fratello successivo del secondo li
    console.log(secondLi.nextElementSibling);

    // 4) l'elemento fratello precedente del secondo li
    console.log(secondLi.previousElementSibling);
  </script>
</body>

</html>
